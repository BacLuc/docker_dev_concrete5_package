#sudo git clone git@github.com:BacLuc/basic_table_package.git concrete5/packages/basic_table_package

bcc-composer-install:
	docker-compose exec  --user www-data -w /var/www/html/packages/bacluc_c5_crud concrete5 composerpkg install

bcc-install-pkg:
	docker-compose exec  --user www-data concrete5 concrete/bin/concrete5 c5:package-install bacluc_c5_crud

bcc-uninstall:
	docker-compose exec  --user www-data concrete5 concrete/bin/concrete5 c5:package-uninstall bacluc_c5_crud

bcc-download:
	git clone -b rewrite git@github.com:BacLuc/bacluc_c5_crud.git concrete5/packages/bacluc_c5_crud
